<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator__ders.MainPage">

    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="5" RowSpacing="5" Padding="5" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Entry Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" x:Name="Display" Keyboard="Numeric"/>

        <Button Grid.Row="1" Grid.Column="0" Text="%" Clicked="OnOperatorPressed"/>
        <Button Grid.Row="1" Grid.Column="1" Text="√" Clicked="OnOperatorPressed"/>
        <Button Grid.Row="1" Grid.Column="2" Text="x²" Clicked="OnOperatorPressed"/>
        <Button Grid.Row="1" Grid.Column="3" Text="C" Clicked="OnOperatorPressed"/>

        <Button Grid.Row="2" Grid.Column="0" Text="1" Clicked="OnNumberPressed"/>
        <Button Grid.Row="2" Grid.Column="1" Text="2" Clicked="OnNumberPressed"/>
        <Button Grid.Row="2" Grid.Column="2" Text="3" Clicked="OnNumberPressed"/>
        <Button Grid.Row="2" Grid.Column="3" Text="+" Clicked="OnOperatorPressed"/>

        <Button Grid.Row="3" Grid.Column="0" Text="4" Clicked="OnNumberPressed"/>
        <Button Grid.Row="3" Grid.Column="1" Text="5" Clicked="OnNumberPressed"/>
        <Button Grid.Row="3" Grid.Column="2" Text="6" Clicked="OnNumberPressed"/>
        <Button Grid.Row="3" Grid.Column="3" Text="-" Clicked="OnOperatorPressed"/>

        <Button Grid.Row="4" Grid.Column="0" Text="7" Clicked="OnNumberPressed"/>
        <Button Grid.Row="4" Grid.Column="1" Text="8" Clicked="OnNumberPressed"/>
        <Button Grid.Row="4" Grid.Column="2" Text="9" Clicked="OnNumberPressed"/>
        <Button Grid.Row="4" Grid.Column="3" Text="*" Clicked="OnOperatorPressed"/>

        <Button Grid.Row="5" Grid.Column="0" Text="0" Clicked="OnNumberPressed"/>
        <Button Grid.Row="5" Grid.Column="1" Text="." Clicked="OnNumberPressed"/>
        <Button Grid.Row="5" Grid.Column="2" Text="=" Clicked="OnOperatorPressed"/>
        <Button Grid.Row="5" Grid.Column="3" Text="/" Clicked="OnOperatorPressed"/>

        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" Text="CE" Clicked="OnOperatorPressed"/>
    </Grid>

</ContentPage>
